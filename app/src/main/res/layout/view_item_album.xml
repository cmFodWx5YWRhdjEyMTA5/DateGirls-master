<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">
    <RelativeLayout
        android:layout_width="@dimen/x500"
        android:layout_height="@dimen/x500"
        android:gravity="center_horizontal">

        <com.amsu.dategirls.view.RoundRectImageView
            android:id="@+id/iv_album_iamge"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/zahuopu_03"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/describe"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_rect_roundangele_alpah" />
        <TextView
            android:id="@+id/iv_album_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="7张照片"
            android:textColor="#FFF"
            android:textSize="@dimen/x25"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/x10"
            />
        <TextView
            android:id="@+id/iv_album_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="回味山林的气息"
            android:textColor="#FFF"
            android:textSize="@dimen/x35"
            android:layout_marginLeft="@dimen/x10"
            android:layout_above="@+id/iv_album_count"
            />

        <TextView
            android:id="@+id/iv_album_lovecount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:textColor="#FFF"
            android:textSize="@dimen/x35"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/x20"
            />
        <ImageView
            android:layout_width="@dimen/x48"
            android:layout_height="@dimen/x48"
            android:src="@drawable/home_xin"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/x20"
            android:layout_toLeftOf="@+id/iv_album_lovecount"/>
    </RelativeLayout>
    


</LinearLayout>

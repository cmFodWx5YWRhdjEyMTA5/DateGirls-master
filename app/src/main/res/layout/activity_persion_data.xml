<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.PersionDataActivity">

    <include layout="@layout/base_activity_head"
        android:id="@+id/rl_base_head"></include>

    <RelativeLayout
        android:id="@+id/rl_personcenter_persondata"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="头像"
            android:layout_marginLeft="20dp"
            android:textSize="15sp"
            android:textColor="#4F4F4F"
            android:layout_centerVertical="true"/>

        <com.amsu.dategirls.view.CircleImageView
            android:id="@+id/iv_personcenter_iocn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/widget_dface" />
    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/rl_personcenter_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#FFFFFF"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:textColor="#4F4F4F" />

        <ImageView
            android:id="@+id/iv_account_indocator1"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow_to_right"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/tv_personcenter_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="right"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/iv_account_indocator1"
            android:textColor="#8F8F8F" />
    </RelativeLayout>
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:scaleType="fitXY"
        android:src="@drawable/home_icon_line2" />

    <RelativeLayout
        android:id="@+id/rl_personcenter_sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性别"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:textColor="#4F4F4F" />

        <ImageView
            android:id="@+id/iv_account_indocator5"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:src="@drawable/arrow_to_right"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/tv_personcenter_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="right"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:textSize="15sp"
            android:layout_toLeftOf="@+id/iv_account_indocator5"
            android:textColor="#8F8F8F" />
    </RelativeLayout>


    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:scaleType="fitXY"
        android:src="@drawable/home_icon_line2" />

    <RelativeLayout
        android:id="@+id/rl_personcenter_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所在城市"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:textColor="#4F4F4F" />

        <ImageView
            android:id="@+id/iv_account_indocator2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:src="@drawable/arrow_to_right"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/tv_personcenter_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="right"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:textSize="15sp"
            android:layout_toLeftOf="@+id/iv_account_indocator2"
            android:textColor="#8F8F8F" />
    </RelativeLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:scaleType="fitXY"
        android:src="@drawable/home_icon_line2" />

    <RelativeLayout
        android:id="@+id/rl_personcenter_birthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="出生年月"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:textColor="#4F4F4F" />

        <ImageView
            android:id="@+id/iv_account_indocator3"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow_to_right"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/tv_personcenter_birthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="right"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/iv_account_indocator3"
            android:textColor="#8F8F8F" />
    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#FFFFFF"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:textColor="#4F4F4F" />

        <TextView
            android:id="@+id/tv_personcenter_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="right"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:textColor="#8F8F8F" />
    </RelativeLayout>


</LinearLayout>
